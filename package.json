{
  "name": "realworld-backend-hapi-prisma",
  "description": "> ### Hapi codebase containing real world examples (CRUD, auth, advanced patterns, etc) that adheres to the [RealWorld](https://github.com/gothinkster/realworld) spec and API.",
  "version": "1.0.0",
  "keywords": [
    "hapi",
    "prisma",
    "postgres"
  ],
  "author": "Jerome Pradier",
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nekomamoushi/hapi-prisma-realworld-backend-app"
  },
  "bugs": {
    "url": "https://github.com/nekomamoushi/hapi-prisma-realworld-backend-app/issues"
  },
  "scripts": {
    "build": "prisma generate && tsc",
    "seed": "ts-node prisma/seed.ts",
    "start": "node dist/index.js",
    "start:watch": "nodemon ./index.ts",
    "postgres:start": "docker-compose up -d",
    "postgres:stop": "docker-compose down",
    "prisma:generate": "prisma generate",
    "test:status": "NODE_ENV=test npm run seed && lab --typescript -v tests/status.test.ts",
    "test:users": "NODE_ENV=test npm run seed && lab --typescript -v tests/users.test.ts",
    "test:profiles": "NODE_ENV=test npm run seed && lab --typescript -v tests/profiles.test.ts",
    "test:articles": "NODE_ENV=test npm run seed && lab --typescript -v tests/articles.test.ts"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/glue": "^8.0.0",
    "@hapi/hapi": "^20.2.2",
    "@hapi/inert": "^7.0.0",
    "@hapi/vision": "^7.0.0",
    "@prisma/client": "^4.0.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "hapi-auth-jwt2": "^10.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@hapi/code": "^9.0.1",
    "@hapi/lab": "^25.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/boom": "^7.3.2",
    "@types/hapi__glue": "^6.1.5",
    "@types/hapi__hapi": "^20.0.12",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__vision": "^5.5.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.4",
    "hapi-swagger": "^14.5.5",
    "nodemon": "^2.0.19",
    "prisma": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
